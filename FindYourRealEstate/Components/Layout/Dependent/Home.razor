<NavLink class="nav-link" href="@HomeDetailsPage">
    <div class="main-container flex-column justify-between">
        <div class="top-content">
            <img src="@Details.HomeImageUrl"/>
        </div>
        <div id="bottom-content-container" class="bottom-content flex-column justify-between">
            <h3>@Details.HomeStatus</h3>
            <h1>@Details.HomeName</h1>
            <h6>@Details.Additional</h6>

            <div class="row-content flex-row justify-flex-start">
                <div class="row-element flex-row justify-flex-start">
                    <img src="@Details.BedsIconUrl"/>
                    <h4>@Details.NumBeds Beds</h4>
                </div>
                <div class="row-element flex-row justify-flex-start">
                    <img src="@Details.BathsIconUrl"/>
                    <h4>@Details.NumBaths Baths</h4>
                </div>
                <div class="row-element flex-row justify-flex-start">
                    <img src="@Details.CarsIconUrl"/>
                    <h4>@Details.NumCars Cars</h4>
                </div>
            </div>
        </div>
    </div>
</NavLink>